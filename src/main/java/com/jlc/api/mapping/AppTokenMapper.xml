<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jlc.api.dao.AppTokenMapper">
	  <!-- 添加推送设备号 -->
    <insert id="insertToken" parameterType="com.jlc.api.dto.AppToken" >
    	insert into t_app_token (id,user_id,token,expired,describe)
    		values (seq_t_app_token.NEXTVAL,#{userId},#{token},#{expired},#{describe})
    </insert>

	<delete id="deleteToken" parameterType="long" >
		delete from t_app_token where user_id=#{userId}
	</delete>
	
	<update id="updateToken" parameterType="com.jlc.api.dto.AppToken" >
		update t_app_token set 
		token=#{token},expired=#{expired}
		<if test="describe!=null and describe!=''">
         ,describe=#{describe}
       </if>
		where user_id=#{userId}
	</update>
	
	<select id="getTokenByUserId" parameterType="long" resultType="com.jlc.api.dto.AppToken">
		select id,user_id userId,token,expired,describe from t_app_token where user_id=#{userId}
	</select>
	
	<select id="getTokenByToken" parameterType="string" resultType="com.jlc.api.dto.AppToken">
		select id,user_id userId,token,expired,describe from t_app_token where token=#{token}
	</select>
</mapper>